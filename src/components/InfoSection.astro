---
// src/components/InfoSection.astro
---

<section id="info" class="bg-oken-blue text-oken-white py-24 border-y border-white/10 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 md:grid-cols-2 gap-16 relative z-10">
    
    <!-- Hours -->
    <div class="space-y-8 p-10 bg-white/5 rounded-3xl backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-colors duration-500">
      <h3 class="text-3xl font-serif text-oken-sand flex items-center gap-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 opacity-70">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>
        Hours
      </h3>
      
      <div class="space-y-6 text-lg tracking-wide font-light">
        <div>
          <h4 class="font-bold text-oken-wood mb-2 uppercase tracking-widest text-sm">Lunch (Walk-ins Only)</h4>
          <p class="opacity-90">Thursday - Sunday: <span class="font-medium">11am - 2pm</span></p>
        </div>
        
        <div class="w-full h-px bg-white/10"></div>
        
        <div>
          <h4 class="font-bold text-oken-wood mb-2 uppercase tracking-widest text-sm">Dinner</h4>
          <p class="mb-1 opacity-90"><span class="inline-block w-32">Thursday:</span> <span class="font-medium">5pm - 9pm</span></p>
          <p class="mb-1 opacity-90"><span class="inline-block w-32">Friday - Sat:</span> <span class="font-medium">5pm - 9:30pm</span></p>
          <p class="opacity-90"><span class="inline-block w-32">Sunday:</span> <span class="font-medium">5pm - 8pm</span></p>
        </div>
      </div>
    </div>

    <!-- Location & Contact -->
    <div class="space-y-8 p-10 bg-white/5 rounded-3xl backdrop-blur-sm border border-white/10 hover:bg-white/10 transition-colors duration-500">
      <h3 class="text-3xl font-serif text-oken-sand flex items-center gap-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 opacity-70">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
        </svg>
        Location
      </h3>
      
      <div class="space-y-6 text-lg tracking-wide font-light">
        <div>
          <h4 class="font-bold text-oken-wood mb-2 uppercase tracking-widest text-sm">Address</h4>
          <p class="opacity-90 font-medium">6200 Claremont Avenue</p>
          <p class="opacity-70 text-base mt-2"><a href="https://maps.google.com/?q=6200+Claremont+Avenue+Oakland" target="_blank" rel="noopener noreferrer" class="text-oken-sand underline decoration-white/30 hover:decoration-white transition-colors">Get Directions</a></p>
        </div>

        <div class="w-full h-px bg-white/10"></div>
        
        <!-- Contact -->
        <div>
          <h4 class="font-bold text-oken-wood mb-2 uppercase tracking-widest text-sm">Contact</h4>
          <div class="space-y-3">
            <a href="tel:5108444130" class="flex items-center gap-4 group hover:-translate-y-0.5 transition-transform duration-300">
              <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center group-hover:bg-oken-wood transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-oken-white">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-2.896-1.596-5.48-4.08-7.074-6.971l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                </svg>
              </div>
              <span class="opacity-90 font-medium">510-844-4130</span>
            </a>
            
            <a href="mailto:hi@okenoakland.com" class="flex items-center gap-4 group hover:-translate-y-0.5 transition-transform duration-300">
              <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center group-hover:bg-oken-wood transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-oken-white">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                </svg>
              </div>
              <span class="opacity-90 font-medium tracking-widest text-sm">HI@OKENOAKLAND.COM</span>
            </a>
          </div>
          <p class="mt-8 text-sm opacity-60 italic bg-white/5 p-4 rounded-xl border border-white/5">
            For parties of 6 or larger please email us.<br/>
            ($80 per person minimum)
          </p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="absolute top-[-50%] left-[-10%] w-[1000px] h-[1000px] bg-oken-white/5 rounded-full blur-[100px] pointer-events-none"></div>
</section>
